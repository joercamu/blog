<div class="row">
	<div class="col-xs-6">
		<div class="article">
			<h1><%= @article.title %></h1>
			<% unless @article.user.nil? %>
				<p>Escrito por: <%= @article.user.email %></p>
			<% end %>
			
			<div>
				<%= @article.body %>
			<br>
				<%= link_to "Editar", edit_article_path(@article) %>
			</div>
		</div>
	</div>
</div>