<div class="row">
	<div class="col-xs-6">
		<div class="article">
			<h1><%= @article.title %></h1>
			<% unless @article.user.nil? %>
				<p>Escrito por: <%= @article.user.email %></p>
			<% end %>
			
			<div>
				<p><%= @article.body.html_safe %></p>
			<br>
				<%= link_to "Editar", edit_article_path(@article) %>
			</div>
			<div class="field">
				<h3>Comentarios...</h3>
				<%= render 'comments/form' %>
				<ul id="comments-box">
					<% @article.comments.each do |comment| %>
					<li class="comment"><%= comment.body %> - <%= comment.user.email%></li>
					<%end%>
				</ul>
			</div>
		</div>
	</div>
</div>