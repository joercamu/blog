<script src="//tinymce.cachefly.net/4.2/tinymce.min.js"></script>
<script>tinymce.init({selector:'textarea'});</script>
	<h1><%= name %></h1>	
	<%= form_for(@article) do |f| %>
		<% @article.errors.full_messages.each do |message| %>
			<div class="be-red">
				* <%= message %>
			</div>
		<%end%>
		<div class="field">
			<%= f.text_field :title, placeholder:"Titulo", class:"form-control" %>
		</div>
		<div class="field">
			<%= f.file_field :cover %>
		</div>
		<div class="field">
			<%= f.text_area :body, placeholder:"Escribe aqui el articulo", class:"form-control", style:"height: 176px" %>
		</div>
		<div class="field">
			<%= f.submit "Guardar", class:"btn" %>
		</div>
	<%end%>